Name: node_modules
Version: 1.0
Release: 2%{?dist}
Summary: Evented I/O modules for NodeJS.
Packager: Martin Lazarov <martin@lazarov.bg>
Vendor: http://github.com/
Group: Development/Libraries
License: MIT License
URL: http://github.com/
Source: %{name}-%{version}.tar.gz
Requires: nodejs
BuildRoot: %(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)

%description
Evented I/O modules for NodeJS

%prep
cd %{_sourcedir}
tar -Pzcf node_modules-%{version}.tar.gz node_modules-%{version}
%setup -q

%install
rm -rf $RPM_BUILD_ROOT

install -d $RPM_BUILD_ROOT/usr/lib/node_modules/
cp -R node_modules/* $RPM_BUILD_ROOT/usr/lib/node_modules/

install -d $RPM_BUILD_ROOT/usr/bin/
ln -sf ../lib/node_modules/docco/bin/docco $RPM_BUILD_ROOT/usr/bin/docco
ln -sf ../lib/node_modules/dox/bin/dox $RPM_BUILD_ROOT/usr/bin/dox
ln -sf ../lib/node_modules/express/bin/express $RPM_BUILD_ROOT/usr/bin/express
ln -sf ../lib/node_modules/expresso/bin/expresso $RPM_BUILD_ROOT/usr/bin/expresso
ln -sf ../lib/node_modules/jade/bin/jade $RPM_BUILD_ROOT/usr/bin/jade
ln -sf ../lib/node_modules/node-inspector/bin/inspector.js $RPM_BUILD_ROOT/usr/bin/node-inspector
ln -sf ../lib/node_modules/expresso/deps/jscoverage/node-jscoverage $RPM_BUILD_ROOT/usr/bin/node-jscoverage
ln -sf ../lib/node_modules/nodemon/nodemon.js $RPM_BUILD_ROOT/usr/bin/nodemon
ln -sf ../lib/node_modules/stylus/bin/stylus $RPM_BUILD_ROOT/usr/bin/stylus
ln -sf ../lib/node_modules/uglifyjs/bin/uglifyjs $RPM_BUILD_ROOT/usr/bin/uglifyjs



%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
/usr/lib/node_modules/*
/usr/bin/docco
/usr/bin/dox
/usr/bin/express
/usr/bin/expresso
/usr/bin/jade
/usr/bin/node-inspector
/usr/bin/node-jscoverage
/usr/bin/nodemon
/usr/bin/stylus
/usr/bin/uglifyjs


